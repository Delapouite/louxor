.app {
	bottom: 0
	display: flex
	flex-direction: column
	justify-content: space-around
	left: 0
	position: absolute
	right: 0
	top: 0
}

.animation, .fullscreen, .search-form {
	margin: 0
	position: absolute
	top: 0
	z-index: 2
}

.animation {
	left: 0
}

.fullscreen {
	right: 0
}

.search-form {
	right: 4em
	top: 0.5em
}

.search-input {
	background: none
	border: 2px solid #999
	border-radius: 2px
	color: #eee
	margin: 0 auto
	outline: none
	padding: 0.5em
	width: 10em
}
