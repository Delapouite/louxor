.current-song {
	min-height: 260px
	text-shadow: 0px 5px 5px rgba(0, 0, 0, 0.3)
	/* vynil needs to spin below song infos */
	z-index: 1
}

.current-song-title {
	display: block
	font-size: 4em
	letter-spacing: 0.1em
	margin-bottom: 0.2em
}

.current-song-artist {
	display: block
	font-weight: normal
	font-size: 2em
	margin-bottom: 0.2em
	padding: 0
}

.current-song-date {
	margin-right: 1em
}


